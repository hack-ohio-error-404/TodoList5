<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stunning_black_fade_wallpaper_images_for_free_download_"
    android:backgroundTint="#262727"
    android:visibility="visible"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="10dp"
        android:autoText="false"
        android:background="#262727"
        android:capitalize="characters"
        android:fontFamily="@font/telex"
        android:text="Email"
        android:textAlignment="inherit"
        android:textColor="#FCFDFD"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="180dp"
        android:background="#262727"
        android:fontFamily="@font/telex"
        android:text="Password"
        android:textColor="#FBF9F9"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="130dp"
        android:background="#037FD1"
        android:fontFamily="@font/telex"
        android:text="Log in"
        android:textColor="#F9FAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTextPassword" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#E8D9D9"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="177dp"
        android:layout_height="54dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="10dp"
        android:autoLink="all"
        android:autoText="false"
        android:backgroundTint="#E8D9D9"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#FDFAFA"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="234dp"
        android:layout_height="60dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="56dp"
        android:background="#262727"
        android:fontFamily="@font/telex"
        android:text=" Todo-List "
        android:textColor="#6CC0ED"
        android:textSize="48sp"
        android:textStyle="bold"
        app:autoSizeTextType="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="70dp"
        android:background="#262727"
        android:fontFamily="@font/telex"
        android:text="Don't have an account !"
        android:textColor="#FBFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="55dp"
        android:backgroundTint="#037FD1"
        android:fontFamily="@font/telex"
        android:text="Sign up"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>